#https://editorconfig.org/#file-format-details
root = true

[*]
charset = utf-8
end-of-line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trainling_whitespace = true

[Makefile]
indent_style = tab

[*.md]
trim_trainling_whitespace = false

[*.{yaml,yml,json,md,toml}]
indent_size = 2

# Ignore:
[*/.venv/**]
[*.svg]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
indent_size = unset
