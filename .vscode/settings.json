{
    "files.eol": "\n",
    "files.trimTrailingWhitespaceInRegexAndStrings": false,
    "python.envFile": "",
    "search.exclude": {
        "**/node_modules": true,
        "**/.venv": true,
        "**/dist": true,
        "**/out": true
    },
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always"
    },
    "pylint.args": ["--rcfile=pyproject.toml"],
    "pylint.importStrategy": "fromEnvironment",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[typescript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "black-formatter.args": ["--config=pyproject.toml"],
    "mypy.runUsingActiveInterpreter": true,
    "mypy-type-checker.args": ["--config pyproject.toml"],
    "yaml.customTags": ["tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format"],
    "yaml.format.printWidth": 100,
    "npm.packageManager": "bun",
    "cSpell.mergeCSpellSettings": true,
    "cSpell.configFile": "cspell.json",
    "vitest.disableWorkspaceWarning": true
}
